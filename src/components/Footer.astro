<style>
  footer {
    padding-block: var(--size-3);
    margin-block-start: var(--size-9);
    background-image: linear-gradient(
      0deg,
      var(--tertiary-background-color) 0%,
      var(--background-color) 100%
    );
    text-align: center;
  }

  .container {
    display: grid;
    place-items: center;
  }

  ul {
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    gap: var(--size-3);
  }
